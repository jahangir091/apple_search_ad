
# the upstream component nginx needs to connect to
upstream django {
    server unix:///run/uwsgi/apple_search_ad.sock; # for a file socket
    # server 127.0.0.1:8000; # for a web port socket (we'll use this first)
}


# configuration of the server
server {
    # the port your site will be served on
    listen      80;
    # the domain name it will serve for
    server_name 5.161.127.61; # substitute your machine's IP address or FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste
    proxy_connect_timeout       900;
    proxy_send_timeout          900;
    proxy_read_timeout          900;
    send_timeout                900;
    uwsgi_read_timeout          900s;

    # Django media
    location /media  {
        alias /var/apple_search_ad/media;  # your Django project's media files - amend as required
    }

    # Django static files
    location /static {
        alias /var/apple_search_ad/static; # your Django project's static files - amend as required
    }

  # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  django;
        include     /home/apple_search_ad/server_deployment_resources/uwsgi_params; # the uwsgi_params file you installed
    }
}
